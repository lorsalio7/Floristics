block vars
  - var pageTitle = "Main title";
  - var htmlClass = "";
  - var bodyClass = "";

block mixins
  include ../mixins/_svg.pug
  include ../mixins/_site-navigation.pug
  include ../mixins/_socials.pug
  include ../mixins/_catalog-cards.pug
  include ../mixins/_composition-thumbs.pug
  include ../mixins/_gift-cards.pug
  include ../mixins/_suppliers-list.pug
  include ../mixins/_footer-navigation.pug



doctype html
html(lang="ru" class= htmlClass)
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= pageTitle
    meta(name="description" content= pageDescription)
    link(rel="shortcut icon" href="img/favicon.ico")
    block styles
      link(rel="preload", href="fonts/ForumRegular.woff2" as="font" type="font/woff2" crossorigin)
      link(rel="stylesheet", href="css/styles.min.css")
  body(class= bodyClass)
    include ../includes/_header.pug
    block content
    include ../includes/_footer.pug

    block scripts
      script(src="js/focus-visible.min.js" defer)
      script(src="js/script.min.js" defer)
